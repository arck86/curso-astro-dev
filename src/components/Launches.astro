---
import { type APISpaceXResponse } from "../type/api";
import CardLaunch from "./CardLaunch.astro";

const rest = await fetch("https://api.spacexdata.com/v5/launches/query", {
  method: "POST",
  headers: {
    "Content.Type": "applications/json",
  },
  body: JSON.stringify({
    query: {},
    options: {
      sort: {
        date_unix: "asc",
      },
      limit: 12,
    },
  }),
});
const { docs } = (await rest.json()) as APISpaceXResponse;
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 text-white">
  {
    docs.map((launch) => 
      <CardLaunch 
      id={launch.id}
      img={launch.links.patch.small}
      details={launch.details}
      flightNumber={launch.flight_number}
      success={launch.success}
      />
    )
  }
</div>
